# =================================================================
# APPLICATION FRAMEWORK & AUTHENTICATION (Next.js / NextAuth.js)
# =================================================================

# Base URL of the deployed application [REQUIRED for production]
# Set to the public URL for production (e.g., https://yourapp.com)
# Defaults to http://localhost:3000 for development
NEXTAUTH_URL="http://localhost:3000"

# Secret key used to sign and encrypt session cookies and JWTs [REQUIRED]
# Generate a secure, long random string: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here

# =================================================================
# DATABASE [REQUIRED]
# =================================================================
# Choose ONE of the following database options:

# Option 1: Local PostgreSQL (for development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/intrasite"

# Option 2: Prisma Accelerate (for production/cloud)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# =================================================================
# EMAIL SERVICE [OPTIONAL]
# =================================================================
# Get your API key from https://resend.com (must start with "re_")
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =================================================================
# OAUTH PROVIDERS [OPTIONAL]
# =================================================================
# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-secret-key-here

# GitHub OAuth - Get from GitHub Developer Settings
GITHUB_CLIENT_ID=your-client-id-here
GITHUB_CLIENT_SECRET=your-secret-key-here

# =================================================================
# DOCKER/LOCAL DEVELOPMENT [OPTIONAL]
# =================================================================
# Only needed if running PostgreSQL in Docker locally
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=intrasite

# =================================================================
# FILE STORAGE [OPTIONAL]
# =================================================================
# Only needed if using MinIO for file storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123

# =================================================================
# DEVELOPMENT SETTINGS [OPTIONAL]
# =================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=intrasite

# Node.js environment (development/production/test)
NODE_ENV=development